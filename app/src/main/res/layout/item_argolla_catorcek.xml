<?xml version="1.0" encoding="utf-8"?>
<com.skydoves.elasticviews.ElasticCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    app:cardElevation="15dp"
    app:cardView_duration="250"
    app:cardView_scale="0.8" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgArgolla14k"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCodigo14k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textStyle="bold|italic"
                android:fontFamily="@font/centurygothic"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDescripcion14k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_marginTop="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPesoProm14k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold|italic"
                android:layout_marginTop="5dp"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</com.skydoves.elasticviews.ElasticCardView>